<p style="color: green"><%= notice %></p>

<h1>Restaurants</h1>

<div id="restaurants">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col"> Phone</th>
        <th scope="col">Website</th>
      </tr>
    </thead>
    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <%= render restaurant %>
          <td><%= link_to 'Show', restaurant, class: "btn btn-link" %></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', method: :delete, class: "btn btn-link", data: {confirm: 'Are you sure you want to delete it?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New restaurant", new_restaurant_path %>
